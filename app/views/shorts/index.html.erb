<p id="notice"><%= notice %></p>

<h1>Shorts</h1>

<table>
  <thead>
    <tr>
      <th>User_Team_Name</th>
      <th>User_Participant1_Name</th>
      <th>Stock_Name</th>
      <th>No_Of_Shares</th>
      <th>Amount</th>
      <th>Created_At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shorts.each do |short| %>
      <tr>
        <td><%= short.user.nameteam %></td>
        <td><%= short.user.namep1 %></td>
        <td><%= short.stock.name %></td>
        <td><%= short.no_of_shares %></td>
        <td><%= short.amt %></td>
        <td><%= short.created_at %> </td>
        <td><%= link_to "Execute", url_for(controller: :shorts, action: :execute, short_id: short.id), method: :post%> <!--, class: 'tweet_like_link' , id: "tweet_#{tweet.id}"--></td>
      </tr>
    <% end %>
  </tbody>
</table>

